// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // User stuff
  id           Int     @id @default(autoincrement())
  isAdmin      Boolean @default(false)
  isBanned     Boolean @default(false)
  bannedReason String?

  // Steam stuff
  steamID String @unique
  name    String
  avatar  String

  // Team stuff
  teamId    Int?
  Team      Team?       @relation(fields: [teamId], references: [id])
  UserStats UserStats[]
}

model Team {
  id      Int    @id @default(autoincrement())
  ownerID String
  name    String
  players User[]
  logo    String
}

model Map {
  id           Int         @id @default(autoincrement())
  display_name String
  data_name    String
  preview      String
  UserStats    UserStats[]
}

model UserStats {
  id        Int  @id @default(autoincrement())
  steamID   Int
  user      User @relation(fields: [steamID], references: [id])
  kills     Int
  deaths    Int
  assists   Int
  headshots Int
  wins      Int
  losses    Int
  rounds    Int
  mvps      Int
  score     Int
  mapId     Int
  map       Map  @relation(fields: [mapId], references: [id])
}
